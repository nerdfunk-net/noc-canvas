# NOC Canvas Backend Configuration

# Application settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
DATABASE_URL=sqlite:///./noc_canvas.db

# CORS settings (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis settings for caching
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=600

# Nautobot settings
NAUTOBOT_URL=https://nautobot.example.com
NAUTOBOT_TOKEN=your-nautobot-api-token
NAUTOBOT_TIMEOUT=30
NAUTOBOT_VERIFY_SSL=true

# CheckMK settings
CHECKMK_URL=https://checkmk.example.com
CHECKMK_SITE=your-site-name
CHECKMK_USERNAME=your-checkmk-username
CHECKMK_PASSWORD=your-checkmk-password
CHECKMK_VERIFY_SSL=true
CHECKMK_TIMEOUT=30

# Background job settings (Celery)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2