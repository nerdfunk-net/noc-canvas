# NOC Canvas Docker Environment Configuration Template
# Copy this file to .env and modify the values as needed

# ==============================================
# SECURITY SETTINGS (CHANGE IN PRODUCTION!)
# ==============================================

# Application secret key - MUST be changed in production
SECRET_KEY=your-secret-key-change-this-in-production

# JWT Token settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Default admin credentials - CHANGE IMMEDIATELY AFTER FIRST LOGIN
DEFAULT_ADMIN_USERNAME=username
DEFAULT_ADMIN_PASSWORD=password

# ==============================================
# DATABASE SETTINGS
# ==============================================

# PostgreSQL configuration
NOC_DATABASE=localhost
NOC_USERNAME=postgres
NOC_PASSWORD=postgres
NOC_DATABASE_PORT=5432
NOC_DATABASE_NAME=noc
NOC_DATABASE_SSL=false

# ==============================================
# REDIS SETTINGS
# ==============================================

# Redis configuration for caching and background jobs
NOC_REDIS_HOST=redis
NOC_REDIS_PORT=6379
NOC_REDIS_PASSWORD=changeme
# Uncomment if using Redis with SSL
# NOC_REDIS_SSL=true

# ==============================================
# EXTERNAL INTEGRATIONS (OPTIONAL)
# ==============================================

# Nautobot integration settings
# NAUTOBOT_URL=https://your-nautobot-instance.com
# NAUTOBOT_TOKEN=your-nautobot-api-token
# NAUTOBOT_VERIFY_SSL=true
# NAUTOBOT_TIMEOUT=30

